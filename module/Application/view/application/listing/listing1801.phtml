CREATE TABLE crusts (
    id integer primary key, 
    name varchar(32), 
    costs float
);

CREATE TABLE toppings (
    id integer primary key, 
    name varchar(32), 
    costs float
);

CREATE TABLE pizzas_toppings (
    pizza_id integer, 
    topping_id integer, 
    FOREIGN KEY(pizza_id) REFERENCES pizzas(id), 
    FOREIGN KEY(topping_id) REFERENCES toppings(id)
);
